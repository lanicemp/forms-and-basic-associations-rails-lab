<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, id: "song_artist_name" %><br>
  <br>
  <%= f.label :genre %>
  <%= f.collection_select :genre, Genre.all, :id, :name, {}, {:id => "song_genre_id"} %><br>
  <br>
  <%= f.label :notes_contents %>
  <textarea name="song[note_contents][]" id="song_notes_1"></textarea>
  <textarea name="song[note_contents][]" id="song_notes_2"></textarea>
  <br>
  <datalist id="artist_list">
  <% Artist.all.each do |a| %>
    <option value="<%=a.name%>">
  <% end %>
  </datalist>

  <br>
  <br>
  <%= f.submit %>
<% end %>


